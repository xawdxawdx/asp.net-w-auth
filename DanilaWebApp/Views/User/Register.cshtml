@model DanilaWebApp.Models.User

@{

}

<a asp-action="Register" asp-controller="User">Регистрация</a>

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="UserName">Введите Login</label><br />
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
      
        <div class="form-group">
            <label asp-for="RegistrationDate" class="control-label"></label>
            <input asp-for="RegistrationDate" class="form-control" />
            <span asp-validation-for="RegistrationDate" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>